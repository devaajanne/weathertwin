<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="JanneAiraksinen">
        <createTable tableName="weatherdatatable">
        <column name="id" type="BIGINT">
            <constraints primaryKey="true"/>
        </column>
        <column name="lat" type="FLOAT"/>
        <column name="lon" type="FLOAT"/>
        <column name="city" type="VARCHAR"/>
        <column name="country_code" type="VARCHAR"/>
        <column name="country_name" type="VARCHAR"/>
        <column name="temp" type="FLOAT"/>
        <column name="temp_unit" type="VARCHAR"/>
        <column name="weather_group" type="VARCHAR"/>
        <column name="weather_icon" type="VARCHAR"/>
        </createTable>
   </changeSet>

</databaseChangeLog>